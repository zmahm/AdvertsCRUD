{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <!-- Sidebar for filters -->
        <aside class="filter-sidebar">
            <h2>Filters</h2>
            {{ form_start(form, { method: 'get' }) }}
            {{ form_row(form.category) }}
            {{ form_row(form.minPrice) }}
            {{ form_row(form.maxPrice) }}
            {{ form_row(form.location) }}
            <button type="submit" class="filter-button">Apply Filters</button>

            {% if app.request.query.has('adverts_filter_form') or app.request.query.has('page') %}
                <a href="{{ path('app_adverts_list') }}" class="filter-button reset-button">Reset Filters</a>
            {% endif %}
            {{ form_end(form) }}
        </aside>

        <!-- Main content -->
        <div class="content">
            <h1>Adverts</h1>

            <table class="adverts-table">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Location</th>
                    <th>Category</th>
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODERATOR') %}
                        <th>Actions</th>
                    {% endif %}
                </tr>
                </thead>
                <tbody>
                {% for advert in adverts %}
                    <tr id="advertRow{{ advert.id }}">
                        <td>{{ advert.title }}</td>
                        <td>{{ advert.description }}</td>
                        <td>{{ advert.price }}</td>
                        <td>{{ advert.location }}</td>
                        <td>{{ advert.category.name }}</td>
                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODERATOR') %}
                            <td>
                                <!-- Delete Button -->
                                <button type="button" class="delete-button" onclick="showConfirm('{{ advert.id }}')">
                                    Delete
                                </button>

                                <!-- Inline Confirmation Box -->
                                <div id="confirmBox{{ advert.id }}" class="confirm-box hidden">
                                    <p>Are you sure?</p>
                                    <form id="deleteForm{{ advert.id }}" action="{{ path('app_advert_delete', { id: advert.id }) }}" method="post">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ advert.id) }}">
                                        <button type="submit" class="btn btn-danger">Yes</button>
                                    </form>
                                    <button type="button" class="btn btn-secondary" onclick="hideConfirm('{{ advert.id }}')">Cancel</button>
                                </div>
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <!-- Pagination -->
            <nav class="pagination-nav">
                <ul class="pagination">
                    {% if currentPage > 1 %}
                        <li class="pagination-item">
                            <a href="{{ path('app_adverts_list', { page: currentPage - 1 }) }}" class="pagination-link">Previous</a>
                        </li>
                    {% endif %}
                    {% for i in 1..totalPages %}
                        <li class="pagination-item {% if i == currentPage %}active{% endif %}">
                            <a href="{{ path('app_adverts_list', { page: i }) }}" class="pagination-link">{{ i }}</a>
                        </li>
                    {% endfor %}
                    {% if currentPage < totalPages %}
                        <li class="pagination-item">
                            <a href="{{ path('app_adverts_list', { page: currentPage + 1 }) }}" class="pagination-link">Next</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </div>
    <!-- Load JavaScript for confirmation handling -->
    <script src="{{ asset('js/confirmation-button-handling.js') }}"></script>
{% endblock %}
